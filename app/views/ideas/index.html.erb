<p id="notice"><%= notice %></p>

    <h1>Ideas</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Picture</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @ideas.each do |idea| %>
        <tr style="margin-bottom: 30px;">
          <td><%= idea.name %></td>
          <td><%= idea.description %></td>
          <td><%= idea.picture %></td>
          <td class="btn btn-default" style="width:100px;"><%= link_to 'Show', idea %></td>
          <td class="btn btn-default" style="width:100px;"><%= link_to 'Edit', edit_idea_path(idea) %></td>
          <td class="btn btn-default" style="width:100px;"><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Idea', new_idea_path %>

